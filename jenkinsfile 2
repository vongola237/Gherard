node {
  def app
    stage ('Clone') {
        checkout scm
    }
    stage ('Build image') {
        app = docker.build('xavki/nginx')
    }
    stage ('Test Image') {
        docker.image('xavki/nginx').withRun('-p 3000:80') { c ->
        sh 'docker ps'
        sh 'curl localhost:3000'
        }
    }
 }
